<div class="container mt-4">
  <p class="text-success"><%= notice %></p>

  <%= link_to "Back to statements", statements_path, class: "btn btn-outline-primary mb-4" %>

  <%= render @statement %>

  <div class="mt-4">
    <%= link_to "Edit", edit_statement_path(@statement), class: "btn btn-warning mr-2" %>
    <%= button_to "Delete", @statement, method: :delete, data: { confirm: "Are you sure you want to delete this statement?" }, class: "btn btn-danger", form_class: "d-inline" %>
  </div>
</div>
